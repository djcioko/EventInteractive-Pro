<html lang="ro">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Live Event Messages</title>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-database.js"></script>
    <style>
        /* Design modern, neutru (negru și auriu) care merge la orice party */
        body { background: #050505; color: #ffffff; font-family: 'Arial', sans-serif; margin: 0; text-align: center; }
        .container { padding: 20px; }
        #form-ui { display: none; }
        #display-ui { display: none; height: 100vh; flex-direction: column; justify-content: center; background: radial-gradient(circle, #1a1a1a 0%, #000000 100%); }
        input, textarea { width: 90%; max-width: 400px; padding: 15px; margin: 10px 0; border-radius: 8px; border: 1px solid #444; background: #111; color: #fff; font-size: 18px; }
        button { background: #d4af37; color: #000; padding: 15px 30px; border: none; border-radius: 8px; font-weight: bold; font-size: 20px; cursor: pointer; }
        .card { border: 4px solid #d4af37; padding: 40px; border-radius: 20px; margin: 20px; }
        .author { font-size: 30px; color: #d4af37; margin-bottom: 10px; }
        .text { font-size: 60px; font-weight: bold; }
    </style>
</head>
<body>

    <div id="form-ui" class="container">
        <h2 id="event-title">MESAJ LIVE</h2>
        <input type="text" id="nume" placeholder="Numele tău">
        <textarea id="mesaj" rows="3" placeholder="Mesajul tău..."></textarea><br>
        <button onclick="trimite()">TRIMITE MESAJUL</button>
        <p id="status" style="display:none; color: #d4af37;">✅ Trimis cu succes!</p>
    </div>

    <div id="display-ui">
        <div class="card">
            <div id="author-display" class="author">AȘTEPTĂM MESAJE...</div>
            <div id="text-display" class="text">Scanează codul QR și trimite o urare!</div>
        </div>
    </div>

    <script>
        // Citim ID-ul evenimentului din link (?id=eveniment123)
        const params = new URLSearchParams(window.location.search);
        let eventID = params.get('id');

        // Dacă nu există ID, nu lăsăm utilizatorul să scrie haotic
        if (!eventID) {
            document.body.innerHTML = "<h1>EROARE: Cod eveniment invalid.</h1>";
        } else {
            // Configurația ta Firebase
            const firebaseConfig = {
                apiKey: "AIzaSyAs-V_E8_p8_8_8_8_8_8_8_8", 
                databaseURL: "https://felicitari-nunta-default-rtdb.firebaseio.com",
                projectId: "felicitari-nunta",
                appId: "1:102925718812:web:01f5ec325b8234133216d9"
            };
            firebase.initializeApp(firebaseConfig);
            const db = firebase.database().ref(eventID);

            // Detectăm dacă e telefon sau laptop
            if (window.innerWidth < 800) {
                document.getElementById('form-ui').style.display = 'block';
            } else {
                document.getElementById('display-ui').style.display = 'flex';
            }

            function trimite() {
                const author = document.getElementById('nume').value;
                const text = document.getElementById('mesaj').value;
                if(author && text) {
                    db.push({ author, text }).then(() => {
                        document.getElementById('status').style.display = 'block';
                        document.getElementById('mesaj').value = '';
                        setTimeout(() => { document.getElementById('status').style.display = 'none'; }, 3000);
                    });
                }
            }

            // Ascultare mesaje
            db.on('value', (snap) => {
                const data = snap.val();
                if(data) {
                    const lista = Object.values(data);
                    const ultimul = lista[lista.length - 1];
                    document.getElementById('author-display').innerText = ultimul.author;
                    document.getElementById('text-display').innerText = `"${ultimul.text}"`;
                }
            });
        }
    </script>
</body>
</html>
